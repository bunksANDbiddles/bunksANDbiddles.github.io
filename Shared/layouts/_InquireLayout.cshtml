        <script type="text/javascript">
            $(function () {
                $('#dialog-form').dialog({
                    autoOpen: false,
                    modal: false,
                    height: 570,
                    width: 900,
                    buttons: {
                        'Add Book': function () {
                            $.ajax({
                                type: "POST",
                                url: $("#add-book-form").attr('action'),
                                data: $("#add-book-form").serialize(),
                                dataType: "text/plain",
                                success: function (response) {
                                    $('#dialog-form').dialog('close');
                                    $("#grid").load('/Default/ #grid', function () {
                                        $('tbody > tr:first')
                                        .effect("highlight", {}, 2000);
                                        alert("Thank You. This is to confirm your entry has been received");
                                       document.getElementById("paragraphAlert").innerHTML = "Thank you for your interest in our school! We look forward to learning more about you and your family.";
                                    });
                                    
                                },
                                error: function (response) {
                                     document.getElementById("paragraphAlert").innerHTML = "Make Sure all Text boxes have been filled correctly!";
                                      alert("Sorry! This form has not been correctly filled");
                                    $('#dialog-form').dialog('close');
                                }
                            });
                        },
                        Cancel: function () {
                            $('#dialog-form').dialog('close');
                        }
                    }
                });

                $('#dateOfBirth').datepicker({ dateFormat: 'yy-mm-dd' });

                $('#add-book')
                    .button().click(function () {
                        $('#dialog-form').dialog('open');
                    });
            });
        </script>

            
     

