
@* Admin Functions *@ 
@functions {  
    
    public static bool ClassExists(string classTitle)     
    {         
        var db = Database.Open("BunksAndBiddlesSchool");         
        var sqlQuery = "SELECT classID FROM Classes WHERE classTitle = @0";         
        return db.Query(sqlQuery, classTitle).Count() > 0;     
     } 
     
     public static bool ClassIsEmpty(string classID)     
     {         
          var db = Database.Open("BunksAndBiddlesSchool");         
          var sqlQuery = "SELECT StudentID FROM Students WHERE classLevel = @0";         
          return db.Query(sqlQuery, classID).Count() == 0;     
      }       
     
     
         
     
 }