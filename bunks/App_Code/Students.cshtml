@* Product Functions *@ 
@functions {  

    public static string GetStudentNameFromId(int studentID)     
    {         
        var db = Database.Open("BunksAndBiddlesSchool");  
               
        var sqlQuery = "SELECT firstName FROM Students WHERE studentID = @0";   

             var subjectName = "";
             var paceNo = "";
             var score = "";
             var admissionNo = "";
            var email = "";
            var paceComment = "";

             var extraCurricularTitle = "";
             var comment = "";
            
        subjectName = Request["subjectName"];
                paceNo = Request["paceNo"];
                score = Request["score"];
                  admissionNo = Request["admissionNo"];
                  email = Request["email"];
                  paceComment = Request["paceComment"];

        extraCurricularTitle = Request["extraCurricularTitle"];
        comment = Request["comment"];
                
                var SupervisorID = WebSecurity.GetUserId(WebSecurity.CurrentUserName);
            var orderSql = "INSERT INTO PaceResult (subjectName, paceNo, score, admissionNo, SupervisorID, email, studentID, paceComment)" +
                                "VALUES (@0, @1, @2, @3, @4, @5, @6, @7)";
                db.Execute(orderSql, subjectName, paceNo, score, admissionNo, SupervisorID, email, studentID , paceComment);    
                
                var orderSqlCurricula = "INSERT INTO ExtraCurricularResults (admissionNo,extraCurricularTitle, comment )"  +
                                        "VALUES (@0, @1, @2)";
                db.Execute(orderSqlCurricula, admissionNo,extraCurricularTitle, comment ) ;
                 
           
             
                 
        return db.QuerySingle(sqlQuery, studentID).firstName;     
        }  
      }  
        
    }