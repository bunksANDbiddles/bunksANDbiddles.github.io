@section script{
<script type="text/javascript">
    var viewModel;
    $(function () {
        viewModel = {
            subActivityID: ko.observable(),
            subActivityName: ko.observable(),
            goals: ko.observable(),
            subActivities: ko.observableArray([]),
            kinderSubjects: ko.observableArray([])

           
        };
      
        ko.applyBindings(viewModel);
        $.getJSON('/JsonService/GetKinderSubjects', function (data) {
            viewModel.kinderSubjects(data);
        });
        $('#kinderSubjects').change(function () {
            $.getJSON('/JsonService/GetSubActivitiesByKindergartenSubjects/' + $(this).val(), function (data) {
                viewModel.subActivities(data);
            });
        });
        $('tr').live('hover', function () {
            $(this).css('cursor', 'pointer');
        }).live('click', function () {
            $.getJSON('/JsonService/GetSubActivitiesByID/' + $(this).find('td:first').text(), function (data) {
                var subActivities = data[0];
             
                viewModel.subActivityName(subActivities.subActivityName);
                viewModel.goals(subActivities.goals);
                
            });
        });
    });

</script>

}
